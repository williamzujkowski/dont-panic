---
// src/components/Search.astro
// This component relies on the Pagefind integration to inject the necessary UI scripts and styles.
// See: https://pagefind.app/docs/astro-integration/
---
<div id="search" class="pagefind-ui"></div>

<style is:global>
/* Basic styles for Pagefind UI - customize as needed */
/* These styles target the elements Pagefind injects */

:root {
  /* Override Pagefind variables if desired */
  /* Example: --pagefind-ui-primary: #007bff; */
  /* See Pagefind docs for available variables */
}

.pagefind-ui {
  /* Container styling */
  margin-left: auto; /* Push search to the right in the header */
}

.pagefind-ui__search-input {
  padding: var(--spacing-xs) var(--spacing-sm);
  border: 1px solid var(--color-border);
  border-radius: var(--border-radius);
  background-color: var(--color-background);
  color: var(--color-text);
  min-width: 200px; /* Adjust as needed */
}

.pagefind-ui__search-input::placeholder {
  color: var(--color-text-muted);
}

.pagefind-ui__search-input:focus {
  outline: 2px solid var(--color-primary);
  outline-offset: 1px;
  border-color: var(--color-primary);
}

/* Style the modal/results */
.pagefind-ui__drawer {
  background-color: var(--color-surface);
  color: var(--color-text);
  border: 1px solid var(--color-border);
  box-shadow: var(--shadow-small);
}

.pagefind-ui__result {
  border-bottom: 1px solid var(--color-border);
  padding: var(--spacing-md);
}
.pagefind-ui__result:last-child {
  border-bottom: none;
}

.pagefind-ui__result-link {
  color: var(--color-primary);
  text-decoration: none;
}
.pagefind-ui__result-link:hover {
  text-decoration: underline;
  color: var(--color-primary-dark);
}

.pagefind-ui__result-title {
  font-weight: bold;
  margin-bottom: var(--spacing-xs);
}

.pagefind-ui__result-excerpt mark {
  background-color: rgba(0, 123, 255, 0.2); /* Highlight color */
  color: inherit;
}

.pagefind-ui__button {
  /* Style the close button if needed */
}

.pagefind-ui__message {
  /* Style messages like "No results" */
  padding: var(--spacing-md);
  color: var(--color-text-muted);
}
</style>
