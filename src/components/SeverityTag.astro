---
// src/components/SeverityTag.astro
interface Props {
  severity: 'Critical' | 'High' | 'Medium' | 'Low' | string; // Allow string for flexibility
}

const { severity } = Astro.props;

let tagClass = 'bg-gray-100 text-gray-800 border border-gray-300'; // Default/Unknown
let tagText = severity;

switch (severity?.toLowerCase()) {
  case 'critical':
    tagClass = 'bg-red-100 text-red-800 border border-red-300';
    tagText = 'Critical';
    break;
  case 'high':
    tagClass = 'bg-orange-100 text-orange-800 border border-orange-300';
    tagText = 'High';
    break;
  case 'medium':
    tagClass = 'bg-yellow-100 text-yellow-800 border border-yellow-300';
    tagText = 'Medium';
    break;
  case 'low':
    tagClass = 'bg-blue-100 text-blue-800 border border-blue-300';
    tagText = 'Low';
    break;
}
---
<span class:list={[tagClass, "px-2 py-0.5 rounded text-xs font-semibold inline-block"]}>
  {tagText}
</span>
