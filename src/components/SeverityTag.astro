---
// src/components/SeverityTag.astro
interface Props {
  severity: 'Critical' | 'High' | 'Medium' | 'Low' | string; // Allow string for flexibility
}

const { severity } = Astro.props;

// Define base classes and specific color classes
const baseClasses = "px-2.5 py-1 rounded-md text-xs font-semibold inline-flex items-center";
let colorClasses = 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300'; // Default/Unknown
let tagText = severity || 'Unknown';
let icon = '';

switch (severity?.toLowerCase()) {
  case 'critical':
    colorClasses = 'bg-red-100 text-red-800 dark:bg-red-900/70 dark:text-red-200 dark:font-medium';
    tagText = 'Critical';
    icon = `<svg class="w-3 h-3 mr-1.5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>`;
    break;
  case 'high':
    colorClasses = 'bg-orange-100 text-orange-800 dark:bg-orange-900/70 dark:text-orange-200 dark:font-medium';
    tagText = 'High';
    icon = `<svg class="w-3 h-3 mr-1.5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <path fill-rule="evenodd" d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z" clip-rule="evenodd" />
            </svg>`;
    break;
  case 'medium':
    colorClasses = 'bg-amber-100 text-amber-800 dark:bg-amber-900/70 dark:text-amber-200 dark:font-medium';
    tagText = 'Medium';
    icon = `<svg class="w-3 h-3 mr-1.5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
            </svg>`;
    break;
  case 'low':
    colorClasses = 'bg-blue-100 text-blue-800 dark:bg-blue-900/70 dark:text-blue-200 dark:font-medium';
    tagText = 'Low';
    icon = `<svg class="w-3 h-3 mr-1.5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>`;
    break;
}
---
<span class:list={[baseClasses, colorClasses]}>
  <Fragment set:html={icon} />
  {tagText}
</span>
