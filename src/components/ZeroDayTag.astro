---
// src/components/ZeroDayTag.astro
interface Props {
  isZeroDay?: boolean;
  text?: string; // Allow custom text like "PRELIMINARY"
}

const { isZeroDay = false, text = "ZERO-DAY" } = Astro.props;
---
{isZeroDay ? 
  <span class="bg-amber-100 text-amber-800 dark:bg-amber-900/70 dark:text-amber-200 dark:font-medium px-2.5 py-1 rounded-md text-xs font-semibold inline-flex items-center animate-pulse" aria-live="polite" role="status">
    {text}
  </span>
: null}
